export function idade(nome, anoNasc, anoAtual){
    idade = 2025 - anoNasc;
    idadeAtual = anoAtual - anoNasc;
    return `Olá ${nome}, em 2025 você terá ${idade} anos. Em 2050 você terá ${idadeAtual} anos.`;
}
//Exportando a função para que possa ser usada em outros arquivos
module.exports = {
    idade
};